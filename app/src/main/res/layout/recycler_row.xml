<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyclerview_row_useremail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="useremail text"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/recyclerview_row_imageview"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
    android:id="@+id/recyclerview_row_comment_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="comment text"
    android:paddingLeft="7dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"/>

    <TextView
        android:id="@+id/recyclerview_row_item_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="---------------------- WELCOME TO THE COFFEE SHOP ----------------------"
        android:textColor="#04A6AC" />

</LinearLayout>